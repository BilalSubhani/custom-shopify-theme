<section>
  <h1>{{ section.settings.heading }}</h1>
  <p>{{ section.settings.text }}</p>
</section>

{% schema %}
{
  "name": "Home Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to my custom theme"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Subtext",
      "default": "This is the first section I built myself"
    }
  ]
}
{% endschema %}
